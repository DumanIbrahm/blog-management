@model BlogManagementProject.Models.Blog
@{
    ViewData["Title"] = "Blog Details";
}

<div class="card shadow rounded-3 border-0">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="card-img-top rounded-top" alt="Blog image"
            style="object-fit: cover; height: 300px;">
    }

    <div class="card-body">
        <h2 class="card-title fw-bold">@Model.Title</h2>
        <p class="text-muted small mb-1">
            <i class="bi bi-person"></i> @Model.User?.UserName â€¢
            <i class="bi bi-calendar"></i> @Model.PublishedDate.ToShortDateString()
        </p>
        <p class="text-secondary mb-2"><strong>Category:</strong> @Model.Category?.Name</p>
        <hr />
        <p class="card-text fs-6">@Model.Content</p>
    </div>

    <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        @if (User.Identity?.IsAuthenticated == true &&
            User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.UserId)
        {
            <div class="d-flex gap-2">
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
        }
    </div>

    <hr class="my-5" />
    <h4 class="mb-4">Comments</h4>

    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
        {
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <p class="card-text">@comment.Content</p>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between">
                    <small class="text-muted">
                        <i class="bi bi-person-circle"></i> @comment.User?.UserName
                    </small>
                    <small class="text-muted">
                        <i class="bi bi-calendar"></i> @comment.CreatedAt.ToString("g")
                    </small>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No comments yet.</p>
    }

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="mt-4 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCommentModal">
                <i class="bi bi-chat-left-text"></i> Add Comment
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">
            <i class="bi bi-exclamation-circle"></i> You must
            <a asp-controller="Account" asp-action="Login">log in</a> to post a comment.
        </div>
    }
</div>

<!-- Add Comment Modal -->
<div class="modal fade" id="addCommentModal" tabindex="-1" aria-labelledby="addCommentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Comment" asp-action="Add" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCommentModalLabel">Add a Comment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="BlogId" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="commentContent" class="form-label">Your Comment</label>
                        <textarea name="Content" id="commentContent" class="form-control" rows="4" placeholder="Write your comment..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
