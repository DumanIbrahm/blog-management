@model BlogManagementProject.Models.Blog
@{
    ViewData["Title"] = "Delete Blog";
}

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>This blog will be permanently deleted:</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text text-muted">@Model.Content.Substring(0, Math.Min(150, Model.Content.Length))...</p>
        <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash-fill"></i> Confirm Delete
    </button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Cancel
    </a>
</form>
