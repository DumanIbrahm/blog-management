@model BlogManagementProject.Models.Blog
@{
    ViewData["Title"] = "Delete Blog";
}

<h2>Are you sure you want to delete this blog?</h2>

<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text">@Model.Content.Substring(0, Math.Min(150, Model.Content.Length))...</p>
        <p class="card-text">
            <small class="text-muted">Author: @Model.User?.UserName | Category: @Model.Category?.Name</small>
        </p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
