@model BlogManagementProject.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: white !important;
    }

    .register-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .register-card {
        width: 100%;
        max-width: 550px;
        padding: 3rem 2.5rem;
        border-radius: 1.5rem;
        box-shadow: 0 0 40px rgba(0, 0, 0, 0.1);
    }

    .register-card h3 {
        font-weight: 700;
    }

    .register-card .form-control {
        height: 50px;
    }

    .register-card .btn-primary {
        height: 50px;
        font-weight: 600;
    }

    .icon-circle {
        font-size: 2.5rem;
        color: #0d6efd;
    }
</style>

<div class="register-wrapper">
    <div class="card register-card">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus icon-circle"></i>
            <h3 class="mt-2">Create Account</h3>
            <p class="text-muted">Register a new user</p>
        </div>

        <form asp-action="Register" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Something went wrong!</strong>
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
            }

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter a password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-person-plus-fill"></i> Register
            </button>
        </form>

        <div class="text-center mt-4">
            <span class="text-muted">Already have an account?</span>
            <a asp-action="Login" class="text-decoration-none fw-semibold">Login</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
